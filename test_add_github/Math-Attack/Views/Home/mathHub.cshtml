<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Math Quiz</title>
        <!-- Bootstrap CSS -->
                    <!--
                Button colour in bootstrap:
                btn-primary: Blue
                btn-secondary: Gray
                btn-danger: Red
                btn-success: Green
            -->
    </head>
    <body>
        <div class="container">
            <h1 class="text-center">Math Quiz</h1>

            <!-- User and Group Management Section -->
            <section id="user-group-management">
                <!-- User name -->
                <div class="row mb-3">
                    <label for="userInput" class="form-label text-center">User</label>
                    <div class="d-flex justify-content-center align-items-center col">
                        <input type="text" class="form-control" id="userInput" placeholder="Username" />
                    </div>
                </div>

                <!-- Group name -->
                <div class="row mb-3">
                    <label for="groupInput" class="form-label text-center">Group</label>
                    <div class="d-flex justify-content-center align-items-center col">
                        <input type="text" class="form-control" id="groupInput" placeholder="Enter group name" />
                    </div>
                </div>

                <!-- Group management buttons -->
                <div class="d-flex justify-content-center align-items-center row">
                    <div class="col text-center">
                        <button type="button" class="btn btn-primary me-2" id="createGroupButton">Create Group</button>
                        <button type="button" class="btn btn-secondary me-2" id="joinGroupButton">Join Group</button>
                        <button type="button" class="btn btn-danger" id="leaveGroupButton">Leave Group</button>
                    </div>
                </div>
            </section>

            <hr />

            <!-- Math Problem Section -->
            <section id="math-problem">
                <!-- Get math problem by pressing button -->
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <button type="button" class="btn btn-success" id="fetchProblemButton">Get Math Problem</button>
                    </div>
                </div>

                <!-- Math problem displayed -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Problem:</label>
                    <div class="col-sm-5">
                        <p id="problemDisplay" class="form-control-plaintext"></p>
                    </div>
                </div>

                <!-- Answer input-field and submit button-->
                <div class="row mb-3">
                    <label for="answerInput" class="col-sm-2 col-form-label">Your Answer:</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="answerInput" placeholder="Solve the problem" />
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-primary" id="answerProblemButton">Submit</button>
                    </div>
                </div>
            </section>
        </div>

        <!-- Refference to online SignalR library -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
        <!-- Refference to javaScript script -->
        <script src="~/js/math.js"></script>
    </body>
</html>